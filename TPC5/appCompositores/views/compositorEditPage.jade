extends layout 

block content 
    .w3-pale-yellow
        .w3-card-4
            header.w3-container.w3-brown.w3-center
                h1 #{title}
            .w3-container
                form.w3-container(method="POST")
                    fieldset.w3-margin-top.w3-margin-bottom
                        legend Dados do Compositor
                        label Id
                        input.w3-input.w3-round(type="text", name="id", readonly, value= compositor.id)
                        label Nome
                        input.w3-input.w3-round(type="text", name="nome", value= compositor.nome)
                        label Período
                        input.w3-input.w3-round(type="text", name="periodo", value= compositor.periodo)
                        label Biografia
                        input.w3-input.w3-round(type="text", name="bio", value= compositor.bio)
                        label Data de nascimento
                        input.w3-input.w3-round(type="text", name="dataNasc", value= compositor.dataNasc)
                        label Data de óbito
                        input.w3-input.w3-round(type="text", name="dataObito", value= compositor.dataObito)
                    button.w3-btn.w3-brown.w3-mb-2.w3-margin-top(type="submit") Guardar Alterações
            div
                a.w3-btn.w3-brown(style="position:fixed; bottom: 25px; right: 25px", href='/compositores') Voltar à página anterior
            footer.w3-container.w3-dark-gray.w3-center
                h5
                    i Gerado por Tomás Sousa
