extends layout 

block content 
    .w3-pale-yellow
        .w3-card-4
            header.w3-display-container.w3-brown.w3-center(style='width: 100%;height: 74px')
                h1.w3-margin-left.w3-display-topleft #{title}
                a.w3-dark-gray.w3-margin-right.w3-padding.w3-display-right(href='/periodos/adicionar', style='text-decoration: none;font-size: 28px;font-weight: bold') +
            .w3-container.w3-margin-top.w3-margin-bottom
                table.w3-table-all.w3-hoverable
                    tr.w3-brown
                        th Nome
                    - for (let i = 0; i < periodos.length; i++)
                        tr
                            td: a(href=`/periodos/${periodos[i]}`)= periodos[i]
            div
                a.w3-btn.w3-brown(style='position:fixed; bottom: 25px; right: 25px', href='/') Voltar à página inicial
            footer.w3-container.w3-dark-gray.w3-center
                h5
                    i Gerado por Tomás Sousa
